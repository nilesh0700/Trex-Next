{
  "kind": "collectionType",
  "collectionName": "organizers",
  "info": {
    "singularName": "organizer",
    "pluralName": "organizers",
    "displayName": "Organizer",
    "description": "Event organizers information"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "bio": {
      "type": "text"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event.event",
      "mappedBy": "organizer"
    }
  }
} 