{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "news",
    "pluralName": "news-articles",
    "displayName": "News Article",
    "description": "News articles with rich content and multiple image support"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "readTime": {
      "type": "string",
      "required": true,
      "default": "5 min read"
    },
    "tags": {
      "type": "json"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "gallery_images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "content_blocks": {
      "type": "component",
      "repeatable": true,
      "component": "content.news-content-block"
    },
    "news_category": {
      "type": "enumeration",
      "enum": ["latest-news", "business-insights", "featured"],
      "required": true,
      "default": "latest-news"
    },
    "priority": {
      "type": "integer",
      "default": 1,
      "min": 1,
      "max": 100
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "news"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "news"
    },
    "related_news": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::news.news"
    }
  }
} 