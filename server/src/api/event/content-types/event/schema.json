{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Event content type for managing events"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "event_status": {
      "type": "enumeration",
      "enum": [
        "upcoming",
        "live",
        "completed"
      ],
      "default": "upcoming",
      "required": true,
      "pluginOptions": {}
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "event_date": {
      "type": "string",
      "description": "Enter the event date in a display-friendly format (e.g., '14th & 15th November 2025')"
    },
    "location": {
      "type": "string"
    },
    "participants_count": {
      "type": "string"
    },
    "registration_link": {
      "type": "string"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "videos"]
    },
    "event_hero_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "description": "Hero image displayed in the event page header section"
    },
    "featured_video_url": {
      "type": "string",
      "required": false
    },
    "media_type": {
      "type": "enumeration",
      "enum": ["image", "video", "video_url"],
      "default": "image",
      "required": true
    },
    "overlay_text": {
      "type": "string"
    },
    "contact_email": {
      "type": "email"
    },
    "contact_time": {
      "type": "string"
    },
    "contact_location": {
      "type": "string"
    },
    "event_heading": {
      "type": "string"
    },
    "event_subheading": {
      "type": "text"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::event-category.event-category",
      "inversedBy": "events"
    },
    "organizer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organizer.organizer",
      "inversedBy": "events"
    },
    "target_markets_title": {
      "type": "string",
      "default": "Target Markets Across India"
    },
    "target_markets_description": {
      "type": "text"
    },
    "pricing_packages": {
      "type": "component",
      "repeatable": true,
      "component": "shared.pricing-package"
    },
    "pricing_section_title": {
      "type": "string",
      "default": "Space And Proposal"
    },
    "pricing_section_description": {
      "type": "text",
      "default": "Choose The Perfect Package For Your Networking Goals"
    },
    "event_flow_items": {
      "type": "component",
      "repeatable": true,
      "component": "shared.event-flow-item"
    },
    "event_flow_title": {
      "type": "string",
      "default": "Event Flow"
    },
    "event_flow_description": {
      "type": "text",
      "default": "Two Days of Intensive Networking and Business Development"
    },
    "google_maps_embed_url": {
      "type": "text",
      "required": false
    },
    "why_city_section_title": {
      "type": "string",
      "default": "Why {city_name}?",
      "description": "Main heading for the Why City section. Use {city_name} placeholder for dynamic replacement"
    },
    "why_city_section_badge_text": {
      "type": "string",
      "default": "Market Opportunity",
      "description": "Text displayed in the orange badge above the main heading"
    },
    "why_city_section_description": {
      "type": "text",
      "default": "Discover India's fastest-growing business destination where opportunity meets infrastructure",
      "description": "Description text below the main heading"
    },
    "city_statistics": {
      "type": "component",
      "repeatable": true,
      "component": "shared.city-statistic",
      "description": "Key statistics about the city (displayed in the top row of cards)"
    },
    "city_advantages": {
      "type": "component",
      "repeatable": true,
      "component": "shared.city-advantage",
      "description": "Detailed advantages of the city (displayed in the main advantage grid)"
    },
    "why_city_section_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable/disable the Why City section for this event"
    }
  }
} 